#include<bits/stdc++.h>
using namespace std;

#define int    long long int
void solve()
{
	int n;
	cin>>n;
	int arr[n];
	for(int i=0;i<n;i++)
	{
		cin>>arr[i];
	}

	//arr[0],arr[n-1]

	if( arr[n-1]-arr[0]-1 <= n)
	{
		cout<<"YES\n";
	}
	else
	{
		cout<<"NO\n";
	}
}
int32_t main()
{
	int t;
	cin>>t;
	while(t--)
	{
		solve();
	}

	return 0;
}
